{
  "name": "@tech-matters/integration-test-runner",
  "version": "1.0.0",
  "description": "Lambda for running integration tests",
  "main": "index.js",
  "scripts": {
    "test:integration": "jest",
    "simulate-lambda-test-run-ts": "cross-env NODE_ENV=development HRM_URL=https://hrm-development.tl.techmatters.org npx ts-node ./src/cli.ts tests/as",
    "simulate-lambda-test-run-js": "cross-env NODE_ENV=development HRM_URL=https://hrm-development.tl.techmatters.org node ./dist/cli.js tests/as",
    "docker:build": "docker build -t integrationtestrunner --build-arg lambda_name=integrationTestRunner --build-arg lambda_dir=. -f ../Dockerfile ../"
  },
  "author": "Tech Matters",
  "license": "AGPL",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.108",
    "@tsconfig/node22": "^22.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.18.0",
    "jest": "^28.1.3",
    "jest-junit": "^16.0.0",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.2",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.716.0",
    "@aws-sdk/lib-dynamodb": "^3.716.0",
    "@tech-matters/ssm-cache": "^1.00",
    "@tech-matters/s3": "^1.00",
    "@tech-matters/twilio-types": "^1.0.0",
    "@tech-matters/twilio-configuration": "^1.0.0",
    "date-fns": "^4.1.0"
  }
}
