{
  "name": "e2e-tests",
  "version": "0.0.1",
  "description": "End to end tests for the Aselo HRM",
  "main": "index.js",
  "scripts": {
    "postinstall": "npx playwright install",
    "test": "npx playwright test --workers 1",
    "test:ui": "npx playwright test --config ui-tests/playwright.ui-test.config.ts",
    "test:local": "DEBUG=pw:api LOAD_SSM_CONFIG=true npm run test",
    "test:ci:development": "cross-env DEBUG=pw:api LOAD_SSM_CONFIG=true HL_ENV=development npm run test",
    "test:staging:ca": "cross-env LOAD_SSM_CONFIG=true HL_ENV=staging HL=ca npm run test",
    "test:production:ca": "cross-env LOAD_SSM_CONFIG=true HL_ENV=production HL=ca npm run test",
    "lint": "eslint --ext ts .",
    "lint:fix": "npm run lint -- --fix ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/techmatters/flex-plugin.git"
  },
  "author": "Tech Matters",
  "license": "AGPL",
  "bugs": {
    "url": "https://github.com/techmatters/flex-plugin/issues"
  },
  "homepage": "https://github.com/techmatters/flex-plugin#readme",
  "devDependencies": {
    "@axe-core/playwright": "^4.6.0",
    "@playwright/test": "^1.30.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "axe-core": "^4.6.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.16.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "hrm-form-definitions": "file:../hrm-form-definitions",
    "mock-socket": "^9.1.5",
    "npm-run-all": "^4.1.5",
    "playwright-core": "^1.30.0",
    "plugin-hrm-form": "file:../plugin-hrm-form",
    "prettier": "^2.6.2",
    "twilio": "^4.10.0",
    "typescript": "^4.7.2"
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "endOfLine": "auto"
  },
  "dependencies": {
    "@aws-sdk/client-ssm": "^3.354.0",
    "@types/ws": "^8.5.4",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.1",
    "global-agent": "^3.0.0",
    "mockttp": "^3.5.1"
  }
}
