{
  "name": "e2e-tests",
  "version": "0.0.1",
  "description": "End to end tests for the Aselo HRM",
  "main": "index.js",
  "scripts": {
    "postinstall": "npx playwright install",
    "test": "npx playwright test --workers 1",
    "test:local": "run-s ssm:local  test:local:run",
    "test:local:run": "cross-env DEBUG=pw:api PLAYWRIGHT_BASEURL=http://localhost:3000 npm run test",
    "lint": "eslint --ext ts .",
    "lint:fix": "npm run lint -- --fix .",
    "ssm:local": "npm run ssm:local:env",
    "ssm:local:env": "docker run --rm -v ~/.aws:/home/aws/.aws -e AWS_DEFAULT_REGION -e AWS_ACCESS_KEY_ID -e AWS_SECRET_ACCESS_KEY interrobangc/awscli2 ssm get-parameter --name \"/local/flex-plugins/e2e-tests/.env\" --with-decryption --query \"Parameter.Value\" --output text > .env"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/techmatters/flex-plugin.git"
  },
  "author": "Tech Matters",
  "license": "AGPL",
  "bugs": {
    "url": "https://github.com/techmatters/flex-plugin/issues"
  },
  "homepage": "https://github.com/techmatters/flex-plugin#readme",
  "devDependencies": {
    "@axe-core/playwright": "^4.6.0",
    "@playwright/test": "^1.22.2",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.16.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mock-socket": "^9.1.5",
    "npm-run-all": "^4.1.5",
    "playwright-core": "^1.22.2",
    "prettier": "^2.6.2",
    "twilio": "^3.77.3",
    "typescript": "^4.7.2"
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "endOfLine": "auto"
  },
  "dependencies": {
    "@types/ws": "^8.5.4",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.1",
    "global-agent": "^3.0.0",
    "mockttp": "^3.5.1"
  }
}
