{
    "intentName": "contact_reason",
    "description": "Specific configs/lex_v2/pt_BR/bots Contact Reason bot",
    "sampleUtterances": [
        {
            "utterance": "trigger_contact_reason"
        },
        {
            "utterance": "Incoming webchat contact"
        }
    ],
    "dialogCodeHook": {
        "enabled": false
    },
    "fulfillmentCodeHook": {
        "enabled": false,
        "active": true,
        "postFulfillmentStatusSpecification": {
            "successNextStep": {
                "dialogAction": {
                    "type": "CloseIntent"
                },
                "intent": {}
            },
            "failureNextStep": {
                "dialogAction": {
                    "type": "CloseIntent"
                },
                "intent": {}
            },
            "timeoutNextStep": {
                "dialogAction": {
                    "type": "CloseIntent"
                },
                "intent": {}
            }
        }
    },
    "slotPriorities": [
        {
            "priority": 1,
            "slotName": "contact_options"
        }
    ],
    "intentClosingSetting": {
        "closingResponse": {
            "messageGroups": [
                {
                    "message": {
                        "plainTextMessage": {
                            "value": "Obrigada."
                        }
                    }
                }
            ],
            "allowInterrupt": true
        },
        "active": true,
        "nextStep": {
            "dialogAction": {
                "type": "EndConversation"
            },
            "intent": {}
        }
    },
    "initialResponseSetting": {
        "initialResponse": {
            "messageGroups": [
                {
                    "message": {
                        "plainTextMessage": {
                            "value": "Obrigada por nos contactar."
                        }
                    }
                }
            ],
            "allowInterrupt": true
        },
        "active": true,
        "nextStep": {
            "dialogAction": {
                "type": "InvokeDialogCodeHook"
            },
            "intent": {}
        },
        "codeHook": {
            "enableCodeHookInvocation": true,
            "active": true,
            "postCodeHookSpecification": {
                "successNextStep": {
                    "dialogAction": {
                        "type": "ElicitSlot",
                        "slotToElicit": "contact_options"
                    },
                    "intent": {}
                },
                "failureNextStep": {
                    "dialogAction": {
                        "type": "EndConversation"
                    },
                    "intent": {}
                },
                "timeoutNextStep": {
                    "dialogAction": {
                        "type": "EndConversation"
                    },
                    "intent": {}
                }
            }
        }
    }
}