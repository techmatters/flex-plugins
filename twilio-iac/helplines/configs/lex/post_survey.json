{
    "post_survey_en": {
        "description": "Post Survey bot",
        "locale": "en-US",
        "process_behavior": "BUILD",
        "child_directed": true,
        "idle_session_ttl_in_seconds": "600",
        "abort_statement": {
          "content": "Sorry, I am not able to assist at this time.",
          "content_type": "PlainText"
        },
        "clarification_prompt": {
          "max_attempts": 2,
          "content": "Sorry, I didn't understand that. Please try again.",
          "content_type": "PlainText"
        },
        "slot_types":{
          "yes_no": {
            "description": "Yes/No option",
            "value_selection_strategy": "ORIGINAL_VALUE",
            "values": {
                "Yes": {
                  "synonyms": [
                    "y",
                    "yes",
                    "yep",
                    "yeah",
                    "yup",
                    "ya",
                    "yah"
                  ]
                },
                "No": {
                  "synonyms": [
                    "n",
                    "no",
                    "nope",
                    "nah",
                    "not"
                  ]
                }
              }
          }
        },
        "intents": {
          "post_survey":{
            "description": "Post Survey Intent",
            "sample_utterances": [
                "survey ended, survey closed, counselor ended survey, caller exited call"
            ],
            "fulfillment_activity": {
                "type": "ReturnIntent"
            },
            "conclusion_statement": {
                "content": "Thank you for reaching out. Please contact us again if you need more help.",
                "content_type": "PlainText"
            },
            "rejection_statement": {
                "content": "Sorry, I didn't understand that.",
                "content_type": "PlainText"
            },
            "slots": {
              "answerQuestions": {
                "priority": 1,
                "description": "answerQuestions",
                "slot_constraint": "Required",
                "slot_type": "yes_no",
                "value_elicitation_prompt": {
                  "max_attempts": 2,
                  "content": [
                    "The counsellor has left the chat. Thank you for reaching out. Please contact us again if you need more help.", 
                    "Before you leave, would you be willing to answer a few questions about the service you received today? Please answer Yes or No."
                ],
                  "content_type": "PlainText"
                }
              },
              "wasHelpful": {
                "priority": 1,
                "description": "wasHelpful",
                "slot_constraint": "Required",
                "slot_type": "yes_no",
                "value_elicitation_prompt": {
                  "max_attempts": 2,
                  "content": "Did you find this conversation helpful? Please answer Yes or No.",
                  "content_type": "PlainText"
                }
              },
              "wouldRecommend": {
                "priority": 1,
                "description": "wasHelpful",
                "slot_constraint": "Required",
                "slot_type": "yes_no",
                "value_elicitation_prompt": {
                  "max_attempts": 2,
                  "content": "Based on this conversation, would you recommend that someone in a similar situation contact us? Please answer Yes or No.",
                  "content_type": "PlainText"
                }
              }
            }
          }
        }
    }
}